<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.antoniogarciaprats.buttonfondotransparente.MainActivity" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabla"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:stretchColumns="*">
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <Button
			        android:id="@+id/iServicios"
			        android:layout_width="100dp"
			        android:layout_height="wrap_content"
					android:textSize="12dp"			        
			        android:text="servicios profesionales"
			        android:background="?android:selectableItemBackground"
			        android:drawableTop="@drawable/iconservicios"
			        android:padding="5dp" />
                
                <Button
			        android:id="@+id/iPortfolio"
			        android:layout_width="100dp"
			        android:layout_height="wrap_content"
					android:textSize="12dp"			        
			        android:text="portfolio"
			        android:background="?android:selectableItemBackground"
			        android:drawableTop="@drawable/iconportfolio"
			        android:padding="5dp" />
            
        </TableRow>
        
    </TableLayout>

</RelativeLayout>
